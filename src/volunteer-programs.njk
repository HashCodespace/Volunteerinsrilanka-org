---
title : Volunteer Programs
layout: 'base.njk'

---

<main>
  <article>
    <!--
    - #HERO -->
    <section class="pages-hero" id="home" style="background-image: url('/assets/img/cc/14.png');">
      <div class="container">
        <h2 class="h2 hero-title title page-title" id="title">
          Join Our Volunteer Program <br>
          Make a Difference in Sri Lanka
        </h2>
        <p class="hero-text" id="sub-title">
          Experience the Joy of Giving Back and Helping Local Communities
        </p>
      </div>
    </section>
    <!-- hero section pver -->
      <section class="popular partner " id="destination">
        <div class="container">
          <ul class="popular-list">
            {% set sectionname = "Volunteer Programs" %}
            {% for item in collections.programs %}
              <li>
                <a href="{{ item.url }}">
                  <div class="popular-card">

                    <figure class="card-img">
                      {% image item.data.image , item.data.imagealt, "(min-width: 300em) 50vw, 100vw" , "" %}
                    </figure>

                    <div class="card-content">

                      <div></div>
                      <p class="card-subtitle">
                        <a href="{{ item.url }}">{{ sectionname }}</a>
                      </p>

                      <h3 class="h3 card-title">
                        <a href="{{ item.url }}">{{ item.data.title }}</a>
                      </h3>
                      <a href="{{ item.url }}">
                        <p class="card-text">
                          {{ item.data.description }}
                        </p>
                      </a>
                      

                    </div>

                  </div>
                </a>
              </li>

            {% endfor %}
          </ul>
        </div>
                    </section>