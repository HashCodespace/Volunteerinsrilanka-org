{% set navitems = [
  ["Volunteer in Sri Lanka",'/',''],
  ['Volunteer Programs','/volunteer-programs/',''],
  ["Experience Sri Lanka",'/experiance-sri-lanka/',''],
  ['Volunteering Fee','/volunteering-fee/',''],
  ['About us','/about-us/',''],
  ['Contact us','/contact-us/',''],
  ['Testimonials','https://g.page/r/CRNzeHSZtXAoEAI/review',''],
  ['Apply Now','/apply-now/','mobile-nav']
  ]
%}
  <header class="header" data-header>

    <div class="overlay" data-overlay></div>

    <div class="header-top">
      <div class="container">

        <a href="tel:+94779308187" class="helpline-box">

          <div class="icon-box">
            <ion-icon name="call-outline"></ion-icon>
          </div>

          <div class="wrapper">
            <p class="helpline-title">For Further Inquires :</p>

            <p class="helpline-number">(+94)77 930 8187 </p>
          </div>

        </a>

        <a href="/" class="logo" style="color:white;font-size: 20px;">
          <img src="/assets/img/logo/4.png" alt=" Volunteer in Sri Lanka logo">
          
        </a>

        <div class="header-btn-group">

          <div class="search-btn" id="language-outline" onclick="showtranslate()" aria-label="Search" style="display:flex;justify-content:center;">
            <div id="google_translate_element" style="display:none;"></div>
            <ion-icon name="language-outline"  class="hashen"></ion-icon>

          </div>

          <button class="nav-open-btn" aria-label="Open Menu" data-nav-open-btn>
            <ion-icon name="menu-outline"></ion-icon>
          </button>
 
        </div>

      </div>
    </div>

    <div class="header-bottom">
      <div class="container">

        <ul class="social-list">

          <li>
            <a href="https://www.facebook.com/profile.php?id=100091639515770" class="social-link">
              <ion-icon name="logo-facebook"></ion-icon>
            </a>
          </li>

          <li>
            <a href="https://twitter.com/Volunteer_SL" class="social-link">
              <ion-icon name="logo-twitter"></ion-icon>
            </a>
          </li>

          <li>
            <a href="https://www.instagram.com/volunteer.srilanka/" class="social-link">
              <ion-icon name="logo-instagram"></ion-icon>
            </a>
          </li>

        </ul>

        <nav class="navbar" data-navbar>

          <div class="navbar-top">

            <a href="#" class="logo">
             <img src="/assets/img/logo/6.png" alt=" Volunteer in Sri Lanka logo">
            </a>

            <button class="nav-close-btn" aria-label="Close Menu" data-nav-close-btn>
              <ion-icon name="close-outline"></ion-icon>
            </button>

          </div>

          <ul class="navbar-list">

            {% for item in navitems %}
              {% if title==item[0] %}
                {% set navdata=['#','active-tab','active-link'] %}
              {% else %}
                {% set navdata=[item[1],'',''] %}
              {% endif %}

              {% if item[0]=='Volunteer in Sri Lanka' %}
                {% set navname='Home' %}
              {% else %}
                {% set navname=item[0] %}
              {% endif %}



              <li {{ navdata[1] }}>
                <a href="{{ navdata[0] }}" class="navbar-link {{ item[2] }}" data-nav-link {{ navdata[2] }}>{{ navname }}</a>
              </li>

            {% endfor %}

            

          </ul>

        </nav>

        <a href="/apply-now/" class="btn btn-primary">Apply now</a href="/apply-now/">

      </div>
    </div>
    <div active-tab active-link style="display:none;visibility: hidden;"></div>

  </header>
