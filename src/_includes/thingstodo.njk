---
layout: 'base.njk'
permalink: "experiance-sri-lanka/things-to-do/{{ title | slugify }}/index.html"
---

<main>
  <article>
    <!--
    - #HERO -->
    <section class="pages-hero page-over" id="home" >
      <div class="container">
        <h2 class="h2 hero-title title page-title" id="title">
          {{ title }}
        </h2>
        <p class="hero-text" id="sub-title">
          {% if herosub %}
            {{ herosub }}
          {% else %}
            Things to Do While Volunteering in Sri Lanka
          {% endif %}
        </p>
      </div>
      {% image image , imagealt, "(min-width: 300em) 50vw, 100vw" , "position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);min-height: 100%;min-width: 100%;z-index: -1;" %}
    </section>
    <!-- hero section pver -->
    <section class="popular partner " id="destination">
      <div class="container">
        <p class="section-subtitle">
          <h2 class="h2 section-title">{{ heading }}</h2>
          <br>
            <br>
              <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
                {{ content | safe }}
              </div>
              {% if title=='Diving & Snorkeling' %}
                <ul class="popular-list">
                  {% for item in collections.diving %}
                    <li>
                      <a href="#{{ item.data.id }}">
                        <div class="popular-card">
                          <figure class="card-img">
                            {% image item.data.image , item.data.imagealt, "(min-width: 300em) 50vw, 100vw" , "" %}</figure>
                            <div class="card-content">
                              <p class="card-subtitle">
                                <a href="#{{ item.data.id }}">Diving & Snorkeling</a>
                              </p>
                              <h3 class="h3 card-title">
                                <a href="#{{ item.data.id }}">{{ item.data.title }}</a>
                              </h3>
                              <a href="#{{ item.data.id }}">
                                <p class="card-text">
                                  {{ item.data.description }}
                                </p>
                              </a>
                            </div>
                          </div>
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                  <br>
                    <br>
                      <br>
                        {% for subitem in collections.diving %}
                          <section id="{{ subitem.data.id }}">
                            <p class="section-subtitle">{{ subitem.data.subheading }}</p>
                            <h2 class="h2 section-title">{{ subitem.data.title }}</h2>
                            <br>
                              <br>
                                <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
                                  {{ subitem.templateContent | safe }}
                                </div>
                                <hr style="margin-top: 5rem;margin-bottom: 5rem;"></section>
                              {% endfor %}
                            {% endif %}
                            {% if title=='Surfing' %}
                              <ul class="popular-list">
                                {% for item in collections.surfing %}
                                  <li>
                                    <a href="#{{ item.data.id }}">
                                      <div class="popular-card">
                                        <figure class="card-img">
                                          {% image item.data.image , item.data.imagealt, "(min-width: 300em) 50vw, 100vw" , "" %}
                                          </figure>
                                          <div class="card-content">
                                            <p class="card-subtitle">
                                              <a href="#{{ item.data.id }}">Surfing Spots</a>
                                            </p>
                                            <h3 class="h3 card-title">
                                              <a href="#{{ item.data.id }}">{{ item.data.title }}</a>
                                            </h3>
                                            <a href="#{{ item.data.id }}">
                                              <p class="card-text">
                                                {{ item.data.description }}
                                              </p>
                                            </a>
                                          </div>
                                        </div>
                                      </a>
                                    </li>
                                  {% endfor %}
                                </ul>
                                <br>
                                  <br>
                                    <br>
                                      {% for subitem in collections.surfing %}
                                        <section id="{{ subitem.data.id }}">
                                          <p class="section-subtitle">{{ subitem.data.subheading }}</p>
                                          <h2 class="h2 section-title">{{ subitem.data.title }}</h2>
                                          <br>
                                            <br>
                                              <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
                                                {{ subitem.templateContent | safe }}
                                              </div>
                                              <hr style="margin-top: 5rem;margin-bottom: 5rem;"></section>
                                            {% endfor %}
                                          {% endif %}
                                          {% if title=='Safari Adventures' %}
                                            <ul class="popular-list">
                                              {% for item in collections.safari %}
                                                <li>
                                                  <a href="{{ item.url }}">
                                                    <div class="popular-card">
                                                      <figure class="card-img">
                                                        {% image item.data.image , item.data.imagealt, "(min-width: 300em) 50vw, 100vw" , "" %}
                                                        </figure>
                                                        <div class="card-content">
                                                          <p class="card-subtitle">
                                                            <a href="{{ item.url }}">Safari Adventures</a>
                                                          </p>
                                                          <h3 class="h3 card-title">
                                                            <a href="{{ item.url }}">{{ item.data.title }}</a>
                                                          </h3>
                                                          <a href="{{ item.url }}">
                                                            <p class="card-text">
                                                              {{ item.data.description }}
                                                            </p>
                                                          </a>
                                                        </div>
                                                      </div>
                                                    </a>
                                                  </li>
                                                {% endfor %}
                                              </ul>
                                              <br>
                                                <br>
                                                  <br>
                                                  {% endif %}
                                                </section>