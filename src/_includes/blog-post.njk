---
layout: 'base.njk'
permalink: "blog/{{ title | slugify }}/"
---


    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-6">
            {# Add your navigation here #}
        </nav>
    </header>

    <main class="container mx-auto px-4 py-8 lg:py-12">
        <article class="max-w-3xl mx-auto">
            {% if featuredImage %}
            <div class="mb-8 rounded-lg overflow-hidden">
                <img src="{{ featuredImage }}" alt="{{ featuredImageAlt }}" class="w-full h-auto">
            </div>
            {% endif %}
            
            <header class="mb-8">
                <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">{{ title }}</h1>
                <div class="flex items-center text-gray-600 space-x-4">
                    <span class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
                        </svg>
                        {{ author }}
                    </span>
                    <span class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"></path>
                        </svg>
                        {{ date | postDate  }}
                    </span>
                    <span class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                        </svg>
                        {{ timeToRead }} min read
                    </span>
                </div>
            </header>
            
            <div class="prose lg:prose-lg max-w-none">
                {{ content | safe }}
            </div>
            
            {% if tags.length %}
            <footer class="mt-12 pt-6 border-t border-gray-200">
                <div class="flex flex-wrap gap-2">
                    {% for tag in tags %}
                    <a href="/tags/{{ tag | slug }}" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors">
                        #{{ tag }}
                    </a>
                    {% endfor %}
                </div>
            </footer>
            {% endif %}
        </article>
    </main>

    <footer class="bg-gray-900 text-white py-12">
        <div class="container mx-auto px-4">
            {# Add your footer content here #}
        </div>
    </footer>

