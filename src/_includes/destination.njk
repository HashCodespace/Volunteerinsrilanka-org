---
layout: 'base.njk'
permalink: "experiance-sri-lanka/popular-destinations/{{ title | slugify }}/index.html"
---


  <main>
    <article>

      <!-- 
        - #HERO
      -->

      <section class="pages-hero" id="home" style="background-image: url('{{ image }}');">
        <div class="container"> 
            <h2 class="h2 hero-title title page-title" id="title">
              {{ title }}
            </h2>
          
            <p class="hero-text" id="sub-title">
              {% if herosub %}
                {{ herosub }}
              {% else %}
                Explore Sri Lanka's Popular Destinations
              {% endif %}

            </p>

           



        </div>
      </section> <!-- hero section pver -->











      <section class="popular partner " id="destination" >
        <div class="container">
		  <p class="section-subtitle">
		  <a href="/experiance-sri-lanka/" class="a-link">Experiance-Sri-Lanka</a>/ 
		  <a href="/explore-sri-lanka/" class="a-link">Popular-Destinations</a>/
		  <a href="" class="a-link">{{ title }}</a> </p> 
		  <h2 class="h2 section-title">{{ heading }}</h2>
		  <br><br>
          <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
            {{ content | safe}}

          </div>


      {% if title=='Hill Country' %}
			<ul class="popular-list">
            {% for item in collections.hillcounty %}
              <li>
                <a href="#{{ item.data.id }}">
                  <div class="popular-card">

                    <figure class="card-img">
                      <img src="{{ item.data.image }}" alt="{{ item.data.imagealt }}" loading="lazy">
                    </figure>

                    <div class="card-content">


                      <p class="card-subtitle">
                        <a href="#{{ item.data.id }}">Hill Country</a>
                      </p>

                      <h3 class="h3 card-title">
                        <a href="#{{ item.data.id }}">{{ item.data.title }}</a>
                      </h3>
                      <a href="#{{ item.data.id }}">
                        <p class="card-text">
                          {{ item.data.description }}
                        </p>
                      </a>

                    </div>

                  </div>
                </a>
              </li> 

              
            {% endfor %}
        </ul> <br><br><br>
        {% for subitem in collections.hillcounty %}
          <section id="{{ subitem.data.id }}">
            <p class="section-subtitle">{{ subitem.data.subheading }}</p>
            <h2 class="h2 section-title">{{ subitem.data.title }}</h2>
            <br><br>
            <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
              {{ subitem.templateContent | safe }}
            </div>
            <hr style="margin-top: 5rem;margin-bottom: 5rem;"> 
          </section>
        {% endfor %}
        
      {% endif %}

            {% if title=='Rainforests' %}
      <ul class="popular-list">
            {% for item in collections.forests %}
              <li>
                <a href="#{{ item.data.id }}">
                  <div class="popular-card">

                    <figure class="card-img">
                      <img src="{{ item.data.image }}" alt="{{ item.data.imagealt }}" loading="lazy">
                    </figure>

                    <div class="card-content">


                      <p class="card-subtitle">
                        <a href="#{{ item.data.id }}">Rainforests</a>
                      </p>

                      <h3 class="h3 card-title">
                        <a href="#{{ item.data.id }}">{{ item.data.title }}</a>
                      </h3>
                      <a href="#{{ item.data.id }}">
                        <p class="card-text">
                          {{ item.data.description }}
                        </p>
                      </a>

                    </div>

                  </div>
                </a>
              </li> 

              
            {% endfor %}
        </ul> <br><br><br>
        {% for subitem in collections.forests %}
          <section id="{{ subitem.data.id }}">
            <p class="section-subtitle">{{ subitem.data.subheading }}</p>
            <h2 class="h2 section-title">{{ subitem.data.title }}</h2>
            <br><br>
            <div class="section-text " style="display:flex;flex-direction: column;align-items: center;">
              {{ subitem.templateContent | safe }}
            </div>
            <hr style="margin-top: 5rem;margin-bottom: 5rem;"> 
          </section>
        {% endfor %}
        
      {% endif %}
		  
      </section>


  <!-- partial -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
